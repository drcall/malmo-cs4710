<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <About>
    <Summary>Makes a world with two floating blocks for bridging</Summary>
  </About>

  <ServerSection>
    <ServerInitialConditions>
        <Time><StartTime>1</StartTime></Time>
    </ServerInitialConditions>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,20*1,5*3,2;3;,biome_1"/>
      <DrawingDecorator>
        <!-- coordinates for cuboid are inclusive -->         <!-- limits of our arena -->
        <DrawCuboid x1="-2" y1="26" z1="-2" x2="10" y2="26" z2="13" type="lava" />           <!-- lava floor -->
        <DrawCuboid x1="11" y1="26" z1="-3" x2="11" y2="46" z2="14" type="stone" />
        <DrawCuboid x1="-3" y1="26" z1="-3" x2="-3" y2="46" z2="14" type="stone" />
        <DrawCuboid x1="-2" y1="26" z1="-3" x2="10" y2="46" z2="-3" type="stone" />
        <DrawCuboid x1="-2" y1="26" z1="14" x2="10" y2="46" z2="14" type="stone" />
        <DrawBlock x="4"  y="31" z="1" type="gold_block" />    <!-- the starting marker -->
        <DrawBlock x="4"  y="31" z="11" type="lapis_block" />     <!-- the destination marker -->
      </DrawingDecorator>
      <ServerQuitFromTimeUp timeLimitMs="20000"/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>Agent</Name>
    <AgentStart>
      <Placement x="4.5" y="32" z="1.5" pitch="30" yaw="0"/>
      <Inventory>
        <InventoryItem slot="0" type="stone" quantity="64"/>
      </Inventory>
    </AgentStart>
    <AgentHandlers>
      <DiscreteMovementCommands/>
      <ObservationFromGrid>
        <Grid name="floor3x3">
          <min x="-1" y="-1" z="-1"/>
          <max x="1" y="-1" z="1"/>
        </Grid>
      </ObservationFromGrid>
      <ObservationFromFullStats/>
      <RewardForTouchingBlockType>
        <Block reward="-100.0" type="lava" behaviour="onceOnly"/>
        <Block reward="100.0" type="lapis_block" behaviour="onceOnly"/>
      </RewardForTouchingBlockType>
      <RewardForSendingCommand reward="-1" />
      <AgentQuitFromTouchingBlockType>
          <Block type="lava" />
          <Block type="lapis_block" />
      </AgentQuitFromTouchingBlockType>
    </AgentHandlers>
  </AgentSection>

</Mission>
